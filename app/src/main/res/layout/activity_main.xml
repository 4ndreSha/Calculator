<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".ui.theme.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/math_operation"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="48sp"
            android:gravity="end"
            android:ellipsize="start"
            android:text="0" />

        <TextView
            android:id="@+id/result_text"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textColor="#969696"
            android:textSize="48sp"
            android:gravity="end"
            android:ellipsize="start"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="10sp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#313131"
            android:layout_marginHorizontal="9sp"
            android:layout_marginBottom="15sp">
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btn_clear"
                style="@style/ClearButton"
                android:text="C"
                >
            </TextView>
            <TextView
                android:id="@+id/btn_convert"
                style="@style/DefaultButton"
                android:text="+/-">
            </TextView>
            <TextView
                android:id="@+id/btn_mod"
                style="@style/DefaultButton"
                android:text="%">
            </TextView>
            <TextView
                android:id="@+id/btn_div"
                style="@style/DefaultButton"
                android:text="รท">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btn_7"
                style="@style/DefaultButton"
                android:text="7">
            </TextView>
            <TextView
                android:id="@+id/btn_8"
                style="@style/DefaultButton"
                android:text="8">
            </TextView>
            <TextView
                android:id="@+id/btn_9"
                style="@style/DefaultButton"
                android:text="9">
            </TextView>
            <TextView
                android:id="@+id/btn_mult"
                style="@style/DefaultButton"
                android:text="ร">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btn_4"
                style="@style/DefaultButton"
                android:text="4">
            </TextView>
            <TextView
                android:id="@+id/btn_5"
                style="@style/DefaultButton"
                android:text="5">
            </TextView>
            <TextView
                android:id="@+id/btn_6"
                style="@style/DefaultButton"
                android:text="6">
            </TextView>
            <TextView
                android:id="@+id/btn_diff"
                style="@style/DefaultButton"
                android:text="-">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btn_1"
                style="@style/DefaultButton"
                android:text="1">
            </TextView>
            <TextView
                android:id="@+id/btn_2"
                style="@style/DefaultButton"
                android:text="2">
            </TextView>
            <TextView
                android:id="@+id/btn_3"
                style="@style/DefaultButton"
                android:text="3">
            </TextView>
            <TextView
                android:id="@+id/btn_sum"
                style="@style/DefaultButton"
                android:text="+">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/btn_0"
                    style="@style/DefaultButton"
                    android:text="0">
                </TextView>
                <TextView
                    android:id="@+id/btn_dot"
                    style="@style/DefaultButton"
                    android:text=".">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/btn_calc"
                    style="@style/CalculateButton"
                    android:text="=">
                </TextView>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>