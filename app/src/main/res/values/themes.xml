<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Calculator" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="DefaultButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/roundrect</item>
        <item name="android:textColor">#cccccc</item>
        <item name="android:textSize">36sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">10sp</item>
    </style>

    <style name="CalculateButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:background">@drawable/wide_roundrect</item>
        <item name="android:textColor">#343434</item>
        <item name="android:textSize">36sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">10sp</item>
    </style>

    <style name="ClearButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/red_roundrect</item>
        <item name="android:textColor">#343434</item>
        <item name="android:textSize">36sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">10sp</item>
    </style>

</resources>